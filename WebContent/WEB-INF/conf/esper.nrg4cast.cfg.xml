<?xml version="1.0" encoding="UTF-8"?><esper-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    xmlns="http://www.espertech.com/schema/esper"    xsi:noNamespaceSchemaLocation="esper-configuration-5-0.xsd">		<event-type name="Measurement" class="eventTypes.nrg4cast.Measurement"/>		<plugin-loader name="EsperIOHTTPAdapter" class-name="com.espertech.esperio.http.EsperIOHTTPAdapterPlugin">		<config-xml>				<esperio-http-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.espertech.com/schema/esperio-http" xsi:noNamespaceSchemaLocation="esperio-http-configuration-5-0.xsd">			<!--				Sample HTTP service.				For use when configuring an HTTP input adapter.			 -->			<service name="inputdataservice" port="9082" nio="true"/>				<!--				Sample handler for HTTP Get requests that handles any request URI.				For use when configuring an HTTP input adapter. Requires a service to be defined.			 -->			<get service="inputdataservice" pattern="/sendData2Esper"/>					</esperio-http-configuration>		</config-xml>	</plugin-loader></esper-configuration>